<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_division_form_inherit" model="ir.ui.view">
            <field name="name">view.sale.order.division.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="sale_division_id"/>
                </xpath>
                <xpath expr="//field[@name='pricelist_id']" position="attributes">
                    <attribute name="invisible">1</attribute> 
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="context">{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}</attribute> 
                    <attribute name="widget">res_partner_many2one</attribute>
                    <attribute name="groups"></attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="pickup_method" widget="radio"
                            options="{'horizontal': true}" required="1"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="context">{}</attribute> 
                </xpath>

                <data>
                <xpath expr="//page/field[@name='order_line']/form/group/group/field[@name='product_id']" position="before">
                    <field name="sale_division_id"/> 
                </xpath>
                <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_id']" position="before">
                    <field name="sale_division_id"/> 
                </xpath>
            </data>

            <xpath expr="//page/field[@name='order_line']/form/group/group/field[@name='product_id']" position="attributes">
                <attribute name="domain">[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id), ('sale_division_id', '=', sale_division_id)]</attribute>
            </xpath>
            
            <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="domain">[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id), ('sale_division_id', '=', sale_division_id)]</attribute>
            </xpath>

        </field>                      
    </record>

        <record id="view_sale_order_take_form_inherit" model="ir.ui.view">
                <field name="name">view.sale.order.take.form.inherit</field>
                <field name="model">sale.order</field>
                <field name="inherit_id" ref="sale.view_order_form"/>
                <field name="arch" type="xml">
                <xpath expr="//page/field[@name='order_line']/form/group/group/field[@name='price_unit']" position="after">
                    <field name="take_in_plant" widget='monetary'/> 
                </xpath>
    
                <xpath expr="//page/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="take_in_plant" widget='monetary'/> 
                </xpath>

        </field>                      
    </record>

</odoo>
